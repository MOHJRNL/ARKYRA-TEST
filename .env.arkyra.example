# ============================================================================
# ARKYRA Environment Configuration
# ============================================================================
# This file contains environment variables for both AJ ARKYRA (internal)
# and ARKYRA SaaS deployments
# ============================================================================

# ============================================================================
# BRANDING & IDENTITY
# ============================================================================
# Brand type: 'aj-arkyra' for Al Jazeera internal, 'arkyra-saas' for SaaS
NEXT_PUBLIC_BRAND_TYPE=arkyra-saas

# Application URLs
# === LOCAL DEVELOPMENT (pnpm dev) ===
# Use these ports when running with 'pnpm dev' (frontend: 4200, backend: 3000)
MAIN_URL=http://localhost:4200
FRONTEND_URL=http://localhost:4200
NEXT_PUBLIC_BACKEND_URL=http://localhost:3000
BACKEND_INTERNAL_URL=http://localhost:3000

# === DOCKER DEPLOYMENT (docker-compose) ===
# When deploying with Docker, change to:
# MAIN_URL=http://localhost:4007
# FRONTEND_URL=http://localhost:4007
# NEXT_PUBLIC_BACKEND_URL=http://localhost:4007/api

# ============================================================================
# DATABASE & CACHE
# ============================================================================
# === LOCAL DEVELOPMENT ===
# Run: docker-compose -f docker-compose.dev.yaml up -d (for backing services only)
POSTGRES_PASSWORD=arkyra_secure_password_change_in_production
REDIS_PASSWORD=arkyra_redis_password
DATABASE_URL=postgresql://arkyra_user:arkyra_secure_password_change_in_production@localhost:5432/arkyra_db
REDIS_URL=redis://:arkyra_redis_password@localhost:6379

# === DOCKER DEPLOYMENT ===
# When deploying with Docker Compose, change to:
# DATABASE_URL=postgresql://arkyra-user:arkyra-password@postgres:5432/arkyra-db
# REDIS_URL=redis://redis:6379

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# OIDC/SSO Configuration (for enterprise)
# OIDC_ENABLED=true
# OIDC_PROVIDER_URL=https://auth.example.com
# OIDC_CLIENT_ID=your-client-id
# OIDC_CLIENT_SECRET=your-client-secret
# OIDC_REDIRECT_URI=http://localhost:4007/api/auth/oidc/callback

# OAuth Configuration for Social Platforms
X_API_KEY=
X_API_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
THREADS_APP_ID=
THREADS_APP_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
TIKTOK_CLIENT_ID=
TIKTOK_CLIENT_SECRET=
PINTEREST_CLIENT_ID=
PINTEREST_CLIENT_SECRET=
DRIBBBLE_CLIENT_ID=
DRIBBBLE_CLIENT_SECRET=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_BOT_TOKEN_ID=
SLACK_ID=
SLACK_SECRET=
SLACK_SIGNING_SECRET=
MASTODON_URL=https://mastodon.social
MASTODON_CLIENT_ID=
MASTODON_CLIENT_SECRET=
BLUESKY_CLIENT_ID=
BLUESKY_CLIENT_SECRET=

# ============================================================================
# AI & CONTENT GENERATION
# ============================================================================
# See AI_MODELS_GUIDE.md for detailed provider comparison and setup

# Default AI Provider (google-gemini, openai, anthropic, groq, mistral)
# Recommended: google-gemini (best cost/performance ratio)
AI_PROVIDER=google-gemini

# Google Gemini API (Recommended - Free tier available)
# Get your key: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=
GOOGLE_GEMINI_MODEL=gemini-2.0-flash-exp

# OpenAI API (Premium option - Best quality)
# Get your key: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini

# Anthropic Claude API (Best for long-form content)
# Get your key: https://console.anthropic.com/
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-7-sonnet-20250219

# Groq API (Fastest inference - Free tier available)
# Get your key: https://console.groq.com/
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

# Mistral AI API (European alternative)
# Get your key: https://console.mistral.ai/
MISTRAL_API_KEY=
MISTRAL_MODEL=mistral-large-latest

# AI Performance Settings
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
AI_ENABLE_CACHING=true
AI_CACHE_TTL=3600

# ============================================================================
# STORAGE & MEDIA
# ============================================================================
# Storage provider: 'local' or 'cloudflare'
STORAGE_PROVIDER=local
UPLOAD_DIRECTORY=/uploads
NEXT_PUBLIC_UPLOAD_DIRECTORY=/uploads

# Cloudflare R2 Configuration (optional)
# STORAGE_PROVIDER=cloudflare
# CLOUDFLARE_ACCOUNT_ID=
# CLOUDFLARE_ACCESS_KEY=
# CLOUDFLARE_SECRET_ACCESS_KEY=
# CLOUDFLARE_BUCKETNAME=
# CLOUDFLARE_BUCKET_URL=
# CLOUDFLARE_REGION=auto

# AWS S3 Configuration (optional)
# STORAGE_PROVIDER=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_S3_REGION=us-east-1

# ============================================================================
# WORKFLOW ORCHESTRATION
# ============================================================================
TEMPORAL_ADDRESS=temporal:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=arkyra-tasks

# ============================================================================
# EMAIL & NOTIFICATIONS
# ============================================================================
# Resend Email Service
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@arkyra.pro

# SMTP Configuration (alternative)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@arkyra.pro

# ============================================================================
# PAYMENT & BILLING (for SaaS)
# ============================================================================
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_SIGNING_KEY=
STRIPE_SIGNING_KEY_CONNECT=
FEE_AMOUNT=0.05

# ============================================================================
# API RATE LIMITING & PROXY
# ============================================================================
# API rate limit (requests per minute)
API_LIMIT=30

# Proxy configuration for handling 190+ accounts
PROXY_ENABLED=true
PROXY_POOL_SIZE=5
PROXY_ROTATION_INTERVAL=300

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Sentry Error Tracking
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_SPOTLIGHT=

# Log Level: 'debug', 'info', 'warn', 'error'
LOG_LEVEL=info

# ============================================================================
# DEVELOPER SETTINGS
# ============================================================================
NX_ADD_PLUGINS=false
NODE_ENV=development

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable features
FEATURE_MULTI_TENANCY=true
FEATURE_RBAC=true
FEATURE_AUDIT_LOG=true
FEATURE_WAF=false
FEATURE_ANALYTICS=true
FEATURE_AI_CONTENT_GENERATION=true

# ============================================================================
# INTERNATIONALIZATION
# ============================================================================
# Default language: 'ar', 'en', 'fr', 'es', 'de'
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
NEXT_PUBLIC_SUPPORTED_LANGUAGES=ar,en,fr,es,de

# ============================================================================
# SECURITY HEADERS
# ============================================================================
# Content Security Policy
CSP_ENABLED=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:4007

# ============================================================================
# MISC SETTINGS
# ============================================================================
NEXT_PUBLIC_DISCORD_SUPPORT=
NEXT_PUBLIC_POLOTNO=
IS_GENERAL=true
DISABLE_REGISTRATION=false

# Short Link Service (optional)
# DUB_TOKEN=
